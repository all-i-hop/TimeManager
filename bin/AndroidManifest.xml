<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhjoanneum.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/CustomActionBarTheme">
        <activity
            android:name="at.fhjoanneum.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.fhjoanneum.android.calendar.CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name="at.fhjoanneum.android.ToDoList"
            android:label="@string/title_activity_to_do_list" >
        </activity>
        <activity
            android:name="at.fhjoanneum.android.data.CreateTask"
            android:label="@string/title_activity_create_task" >
        </activity>
        <activity
            android:name="at.fhjoanneum.android.TaskDetails"
            android:label="@string/title_activity_task_details" >
        </activity>
        <activity
            android:name="at.fhjoanneum.android.Settings"
            android:label="@string/title_activity_login" 
            android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name="at.fhjoanneum.android.swipegesture.SwipeListViewAactivity"
            android:label="@string/title_activity_swipe_list_view_aactivity" >
        </activity>
        <activity
            android:name="at.fhjoanneum.android.ExerciseStatistics"
            android:label="@string/title_activity_exercise_statistics" >
        </activity>
        <activity 
            android:name="at.fhjoanneum.android.About"
            android:label="@string/title_activity_about">
        </activity>
    </application>

</manifest>
